<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardViewStyle"
    android:layout_width="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/space_150"
        android:layout_height="@dimen/space_150"
        android:background="@color/colorBackgroundDetails"
        android:orientation="vertical"
        android:padding="@dimen/space_10">

        <TextView
            android:id="@+id/text_view_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/review_author"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/label_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding_5"
            android:ellipsize="marquee"
            android:maxLines="3"
            android:text="@string/review_text"
            android:textSize="@dimen/item_review_text_size" />

    </LinearLayout>
</android.support.v7.widget.CardView>