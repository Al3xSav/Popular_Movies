<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainScreen" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">@dimen/small_padding_5</item>
        <item name="android:textAlignment">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="DetailsScreenLabels" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:padding">@dimen/small_padding_5</item>
    </style>

    <style name="DetailsScreenInfo" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/details_text_size</item>
        <item name="android:padding">@dimen/small_padding_5</item>
    </style>

</resources>
